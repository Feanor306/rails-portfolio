<div class="col">
    <div class="card shadow-sm">
        <%= image_tag portfolio_img(portfolio.thumb_image.url, 'thumb') %> 

        <div class="card-body">
            <p class="card-title"><%= link_to portfolio.title, portfolio_show_path(portfolio) %></p>
            <p class="card-text"><%= portfolio.subtitle %></p>
            <p class="card-text"><%= portfolio.body %></p>
            
            <% if logged_in?(:site_admin) %>
                <div class="d-flex justify-content-between align-items-center">
                    <div class="btn-group">
                        <%= link_to "Edit", 
                            edit_portfolio_path(portfolio), 
                            class: "btn btn-sm btn-outline-secondary" %>
                        <%= link_to 'Delete', 
                            portfolio_path(portfolio), 
                            method: :delete, 
                            data: { confirm: 'Are you sure?' }, 
                            class: "btn btn-sm btn-outline-secondary" %>
                    </div>
                </div>
            <% end %>
        </div>
    </div>
</div>