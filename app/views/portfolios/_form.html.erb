<%= form_with(model: @portfolio) do |form| %>
  <div class="row">
    <div class="col-md-6">
      <div class="form-group">
        <%= form.label :title %>
        <%= form.text_field :title, class: "form-control" %>
      </div>

      <div class="form-group">
        <%= form.label :subtitle %>
        <%= form.text_field :subtitle, class: "form-control" %>
      </div>

      <div class="form-group">
        <%= form.label :main_image %>
        <%= form.file_field :main_image, class: "form-control" %>
      </div>

      <div class="form-group">
        <%= form.label :thumb_image %>
        <%= form.file_field :thumb_image, class: "form-control" %>
      </div>
    </div>
    <div class="col-md-6">
      <div class="form-group">
        <%= form.label :body %>
        <%= form.text_area :body, class: "form-control", rows: 13 %>
      </div>
    </div>

    <hr />

    <div class="col-md-12">
      <h2>Technologies used</h2>
      <div>
        <%= form.fields_for :technologies do |technology_form| %>
          <div class="form-group">
            <%= technology_form.label :name %>
            <%= technology_form.text_field :name, class: "form-control" %>
          </div>
        <% end %>
      </div>

      <div class="form-group mt-3">
        <%= form.submit "Submit", class: "btn btn-primary" %>
      </div>
    </div>
  </div>
<% end %>
