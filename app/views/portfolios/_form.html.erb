<%= form_with(model: @portfolio) do |f| %>
  <% if @portfolio.errors.any? %>
    <% @portfolio.errors.full_messages.each do |error| %>
      <%= alert_generator error %>
    <% end %>
  <% end %>

  <div class="row">
    <div class="col-md-6">
      <div class="form-group">
        <%= f.label :title %>
        <%= f.text_field :title, class: "form-control" %>
      </div>

      <div class="form-group">
        <%= f.label :subtitle %>
        <%= f.text_field :subtitle, class: "form-control" %>
      </div>

      <!-- ALT STYLE FOR IMAGE UPLOAD (style as button) -->
      <%
=begin%>
 <div class="form-group">
        <label class="btn btn-primary">
          Upload Image <%= form.file_field :main_image, style: "display:none" %>
        </label>
      </div> 
<%
=end%>

      <div class="form-group">
        <%= f.label :main_image %>
        <%= f.file_field :main_image, class: "form-control" %>
      </div> 

      <div class="form-group">
        <%= f.label :thumb_image %>
        <%= f.file_field :thumb_image, class: "form-control" %>
      </div>
    </div>
    <div class="col-md-6">
      <div class="form-group">
        <%= f.label :body %>
        <%= f.text_area :body, class: "form-control", rows: 13 %>
      </div>
    </div>

    <hr />

    <div class="col-md-12">
      <h2>Technologies used</h2>
      <div id="technologies">
        <%= f.fields_for :technologies do |technology| %>
          <%= render 'technology_fields', f: technology %>
        <% end %>

        <div>
          <%= link_to_add_association 'Add Technology', f, :technologies %>
        </div>
      </div>

      <div class="form-group mt-3">
        <%= f.submit "Submit", class: "btn btn-primary" %>
      </div>
    </div>
  </div>
<% end %>
